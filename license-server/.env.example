# Server Config
PORT=3000
NODE_ENV=production

# Database
DB_HOST=localhost
DB_USER=license_user
DB_PASSWORD=your_secure_password_here
DB_NAME=license_db

# JWT Secret for user authentication
JWT_SECRET=your_jwt_secret_here_change_this_to_random_string

# Device Salt for hashing device IDs
DEVICE_SALT=your_device_salt_here_change_this_to_random_string

# RSA Keys for license activation tokens
# Generate with: openssl genrsa -out private.pem 2048
# Extract public: openssl rsa -in private.pem -pubout -out public.pem
PRIVATE_KEY_PATH=./keys/private.pem
PUBLIC_KEY_PATH=./keys/public.pem

# Or provide keys directly (base64 encoded)
# PRIVATE_KEY=
# PUBLIC_KEY=

# CORS - allowed origins (comma separated)
CORS_ORIGINS=https://license.dangthanhson.com,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
