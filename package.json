{
  "name": "promptflow-desktop",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:exe": "npm run build && electron-builder",
    "start": "npm run build && electron ."
  },
  "build": {
    "appId": "com.promptflow.desktop",
    "productName": "PromptFlow Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-preload.js",
      "license-manager.js",
      "keys/public.pem",
      "package.json",
      "!license-active/**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!*.md",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tinymce": "^8.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
